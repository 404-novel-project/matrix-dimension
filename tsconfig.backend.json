{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./build/app",
      "module": "CommonJS",
      "types": ["bluebird", "body-parser", "jquery", "validator"],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "target": "es2015",
    },
    "include": [
      "./src/**/*"
    ],
  }
  